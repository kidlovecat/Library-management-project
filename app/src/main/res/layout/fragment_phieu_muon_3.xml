<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/timnhat"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:background="@drawable/top_background"
        android:layout_marginBottom="675dp">
        <Button
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_style"
            android:text="Search"
            android:textColor="@color/camdam"
            app:layout_constraintRight_toRightOf="@+id/top_background"
            app:layout_constraintTop_toTopOf="@+id/top_background"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Từ ngày "
                android:textColor="@color/timnhat"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:id="@+id/edTu"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:layout_marginLeft="12dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Đến ngày "
                android:textColor="@color/timnhat"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:textColor="@color/white"
                android:id="@+id/edDen"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"

                />
        </LinearLayout>
        <TextView
            android:id="@+id/tvTongPM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/timnhat"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="8dp"
            android:text="10 phiếu mượn"/>
    </LinearLayout>
    <ListView
        android:id="@+id/lvPhieuMuon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="140dp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="56dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_add"
        android:backgroundTint="@color/cam"
        app:layout_anchorGravity="bottom|right|end"/>
</FrameLayout>